<snippet>
    <!-- A template for splitting a variable at new lines -->
    <!-- You'd be surprised how often you use this... -->
    <content><![CDATA[
\$${1:output} = preg_split("/\\r\\n|\\r|\\n/", \$${2:input});
]]></content>
    <!-- Optional: Set a tabTrigger to define how to trigger the snippet -->
    <tabTrigger>newlinesplit</tabTrigger>
    <!-- Optional: Set a scope to limit where the snippet will trigger -->
    <scope>source.php</scope>
</snippet>
